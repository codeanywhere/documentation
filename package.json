{
  "name": "codeanywhere-docs",
  "version": "1.0.0",
  "description": "This is the repo for the documentation for [Codeanywhere](https://codeanywhere.com/), a powerful online IDE.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "node copyAssets.js",
    "tsc": "tsc",
    "build": "npm run clean && npm run update-search-pool && npm run tsc && webpack && npm run copy-assets",
    "dev:start": "npm run build && npm start",
    "dev": "nodemon --watch src -e ts,ejs,css,md --exec npm run dev:start",
    "start": "node .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format:check": "prettier --check ./index.ts",
    "format": "prettier --write src/index.ts && prettier --write src/tools/updateSearchPool.ts",
    "update-search-pool": "npm run tsc src/tools/updateSearchPool.ts && node src/tools/updateSearchPool.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ejs": "^2.7.1",
    "fuse.js": "^6.4.6",
    "highlight.js": "^9.15.10",
    "lodash": "^4.17.21",
    "marked": "^0.7.0",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/marked": "^2.0.3",
    "browser-sync": "^2.27.5",
    "gulp": "^4.0.2",
    "gulp-cached": "^1.1.1",
    "gulp-changed": "^4.0.3",
    "gulp-clean": "^0.4.0",
    "gulp-copy": "^4.0.1",
    "gulp-ejs": "^5.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-watch": "^5.0.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  }
}
